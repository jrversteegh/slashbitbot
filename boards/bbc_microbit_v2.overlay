&nfct {
        status = "disabled";
};

&uicr { 
        nfct-pins-as-gpios; 
};

/ {                                                                                                  
        zephyr,user {                                                                                
                left-wheel-gpios = <&edge_connector 9 GPIO_ACTIVE_LOW>;
                right-wheel-gpios = <&edge_connector 8 GPIO_ACTIVE_LOW>;
        };                                                                                           

};
